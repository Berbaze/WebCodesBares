@page
@model ConfirmationModel
@{
    ViewData["Title"] = "Bestellbestätigung";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded animate__animated animate__fadeIn">
        <div class="text-center">
            <h2 class="text-success fw-bold">✅ Bestellung bestätigt!</h2>
            <p class="text-muted">Vielen Dank für Ihren Kauf. Ihre Lizenzdetails werden per E-Mail gesendet.</p>
        </div>

        <div class="mt-4">
            <h4 class="fw-bold text-primary">🛒 Bestellinformationen</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Bestellnummer:</strong> @Model.Commande.ClientId</li>
                <li class="list-group-item">
                    <strong>Produkte:</strong>
                    <ul class="list-unstyled mt-2">
                        @foreach (var item in Model.Commande.CommandeProduits)
                        {
                            <li class="badge bg-secondary p-2 me-1">@item.Produit.Nom</li>
                        }
                    </ul>
                </li>
                <li class="list-group-item"><strong>Betrag:</strong> @(Model.Commande.EstPaye ? "Bezahlt" : "Nicht bezahlt")</li>
                <li class="list-group-item"><strong>Datum:</strong> @Model.Commande.DateAchat.ToString("dd.MM.yyyy HH:mm")</li>
            </ul>
        </div>

        <div class="text-center mt-4">
            <p class="alert alert-info">📩 Sie erhalten eine E-Mail mit Ihren Anmeldeinformationen und Lizenzdetails.</p>
        </div>
    </div>
</div>

<!-- Animationen hinzufügen -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
