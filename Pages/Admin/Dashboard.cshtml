@page
@model WebCodesBares.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "📊 Admin-Dashboard";
}

<h2 class="mb-4">📊 Allgemeine Statistiken</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>E-Mail</th>
            <th>Anzahl der Lizenzen</th>
            <th>Letzte Lizenz</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model.Stats)
        {
            <tr>
                <td>@stat.Email</td>
                <td>@stat.NombreLicences</td>
                <td>@(stat.DerniereLicence?.ToString("yyyy-MM-dd") ?? "—")</td>
            </tr>
        }
    </tbody>
</table>

<h2 class="mt-5 mb-3">📝 Aktionsprotokoll (Audit-Log)</h2>

<table class="table table-hover table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>Datum</th>
            <th>Aktion</th>
            <th>Durchgeführt von</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@log.Action</td>
                <td>@log.EffectuePar</td>
            </tr>
        }
    </tbody>
</table>
