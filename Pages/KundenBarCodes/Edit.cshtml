@page
@model WebCodesBares.Pages.KundenBarCodes.EditModel
@{
    ViewData["Title"] = "Kunde bearbeiten";
}

<div class="container mt-4">
    <h2 class="mb-4">✏️ Kunde bearbeiten</h2>

    <form method="post">
        <input type="hidden" asp-for="Kunde.Id_Kunden" />

        <div class="mb-3">
            <label asp-for="Kunde.Firmenname" class="form-label">Firmenname</label>
            <input asp-for="Kunde.Firmenname" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Kunde.Email" class="form-label">E-Mail</label>
            <input asp-for="Kunde.Email" class="form-control" type="email" required />
        </div>

        <div class="mb-3">
            <label asp-for="Kunde.Telefonnummer" class="form-label">Telefonnummer</label>
            <input asp-for="Kunde.Telefonnummer" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Kunde.Adresse" class="form-label">Adresse</label>
            <input asp-for="Kunde.Adresse" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">💾 Speichern</button>
        <a asp-page="Index" class="btn btn-secondary">🔙 Zurück</a>
    </form>
</div>

