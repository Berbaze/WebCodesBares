@page
@model WebCodesBares.Pages.KundenBarCodes.HomeModel
@{
    ViewData["Title"] = "Startseite";
}

<!-- 🔹 Hero Section -->
<div class="container-fluid bg-dark text-white text-center py-5">
    <h1 class="display-4">🏠 Willkommen bei ArchivCode</h1>
    <p class="lead">Die beste Lösung zur Verwaltung von Barcodes</p>
</div>

<!-- 🔹 Carrousel Bootstrap -->
<div id="barcodeCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#barcodeCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#barcodeCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#barcodeCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/barcode1.webp" class="d-block w-100" alt="Barcode mit Laser-Scan" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>🔍 Präzise und schnelle Erkennung</h5>
                <p>Unsere Barcodes garantieren eine einwandfreie Lesbarkeit.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/barcode2.webp" class="d-block w-100" alt="Barcode auf Produkt" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>🛒 Optimiert für den Einzelhandel</h5>
                <p>Perfekte Barcodes für Ihre Geschäftsprozesse.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/barcode3.webp" class="d-block w-100" alt="Digitaler Barcode" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>💎 Innovation im digitalen Bereich</h5>
                <p>Moderne Barcode-Technologie für digitale Prozesse.</p>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#barcodeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#barcodeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- 🔹 Lizenzmodelle -->
<div class="container mt-5 text-center">
    <h2 class="fw-bold mb-4">📜 Wählen Sie Ihre Lizenz</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card pricing-card p-3 shadow-lg border-0 rounded-4">
                <img src="/images/license-basic.webp" class="card-img-top rounded-3" alt="Basic Lizenz">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Basic Lizenz</h5>
                    <p>1 Nutzer, 1.000 Barcodes</p>
                    <p class="fs-4 fw-bold text-primary">990 € einmalig + 190 €/Jahr</p>
                    <a href="/Produits" class="btn btn-primary w-100">Jetzt kaufen</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card pricing-card p-3 shadow-lg border-0 rounded-4">
                <img src="/images/license-pro.webp" class="card-img-top rounded-3" alt="Pro Lizenz">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Pro Lizenz</h5>
                    <p>3 Nutzer, 10.000 Barcodes</p>
                    <p class="fs-4 fw-bold text-primary">2.990 € einmalig + 390 €/Jahr</p>
                    <a href="/Produits" class="btn btn-success w-100">Jetzt kaufen</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card pricing-card p-3 shadow-lg border-0 rounded-4">
                <img src="/images/license-enterprise.webp" class="card-img-top rounded-3" alt="Enterprise Lizenz">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Enterprise Lizenz</h5>
                    <p>Unbegrenzte Barcodes, API-Zugriff</p>
                    <p class="fs-4 fw-bold text-primary">9.990 € einmalig + 990 €/Jahr</p>
                    <a href="/Produits" class="btn btn-dark w-100">Jetzt kaufen</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 Vorteile -->
<div class="container mt-5 text-center">
    <h2 class="fw-bold mb-4">💡 Warum ArchivCode?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="advantage-card p-4 shadow rounded-4">
                <h4>📊 Leistungsstark</h4>
                <p>Modernste Barcode-Technologie für maximale Effizienz.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="advantage-card p-4 shadow rounded-4">
                <h4>🔒 Sicher</h4>
                <p>Höchste Sicherheitsstandards für Ihre Daten.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="advantage-card p-4 shadow rounded-4">
                <h4>⚡ Schnell</h4>
                <p>Optimierte Performance für Ihre Geschäftsprozesse.</p>
            </div>
        </div>
    </div>
</div>

