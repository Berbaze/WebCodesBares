<!-- 🔹 Kontakt -->
<div class="container mt-5">
    <h2 class="text-center mb-4">📩 Kontaktieren Sie uns</h2>
    <p class="text-center text-muted">Haben Sie Fragen? Schreiben Sie uns eine Nachricht!</p>

    <form class="w-50 mx-auto mt-4">
        <div class="mb-3">
            <label for="name" class="form-label">Ihr Name</label>
            <input type="text" class="form-control" id="name" placeholder="Ihr Name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Ihre E-Mail</label>
            <input type="email" class="form-control" id="email" placeholder="Ihre E-Mail">
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Nachricht</label>
            <textarea class="form-control" id="message" rows="4" placeholder="Ihre Nachricht"></textarea>
        </div>
        <button type="submit" class="btn btn-dark w-100">📨 Nachricht senden</button>
    </form>
</div>


<!-- 🔹 Footer -->
<footer class="footer text-white text-center py-4 mt-5">
    <p>© 2025 ArchivCode | Alle Rechte vorbehalten</p>
    <p><a href="/Privacy" class="text-light">Datenschutz</a> | <a href="/Kontakt" class="text-light">Kontakt</a></p>
</footer>
