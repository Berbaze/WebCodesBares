@page
@model WebCodesBares.Pages.KundenBarCodes.DetailsModel
@{
    ViewData["Title"] = "Kundendetails";
}

<div class="container mt-4">
    <h2 class="mb-4">ℹ️ Kundendetails</h2>

    <ul class="list-group">
        <li class="list-group-item"><strong>Firmenname:</strong> @Model.Kunde.Firmenname</li>
        <li class="list-group-item"><strong>Email:</strong> @Model.Kunde.Email</li>
        <li class="list-group-item"><strong>Telefonnummer:</strong> @Model.Kunde.Telefonnummer</li>
        <li class="list-group-item"><strong>Adresse:</strong> @Model.Kunde.Adresse</li>
    </ul>

    <div class="mt-4">
        <a asp-page="Edit" asp-route-id="@Model.Kunde.Id_Kunden" class="btn btn-warning">✏️ Bearbeiten</a>
        <a asp-page="Index" class="btn btn-secondary">🔙 Zurück</a>
    </div>
</div>
